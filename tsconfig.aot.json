{
    "compilerOptions": {
      "target": "ES5",
      "sourceMap": true,
      "module":"commonjs",
      "moduleResolution":"node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": true,
      "lib": ["es2017", "dom"]
    },
    "compileOnSave":true,
    "exclude": [    
      "**/*.spec.ts",
      "node_modules/**/*.d.ts",
      "scripts/typings/d.ts",
      "prod/"
    ],
    "angularCompilerOptions":{
      "genDir":"dist/prod/",
      "skipMetadataEmit":true
    }
  }